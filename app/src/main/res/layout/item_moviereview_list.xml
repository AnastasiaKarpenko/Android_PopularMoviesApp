<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/review_author"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="18dp"
            android:maxLines="1"
            tools:text="Review Author"/>

        <TextView
            android:id="@+id/review_id"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:textColor="#808080"
            tools:text="Review 1"/>

        <TextView
            android:id="@+id/review_content"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:maxLines="4"
            tools:text="This is a sample content.This is a sample content.This is a sample content.This is a sample content.This is a sample content.This is a sample content.This is a sample content.This is a sample content.vvvvvvvvvvvvThis is a sample content.This is a sample content.This is a sample content.This is a sample content. This is a sample content. This is a sample content. This is a sample content. This is a sample content. This is a sample content."/>

    </LinearLayout>

</android.support.v7.widget.CardView>
